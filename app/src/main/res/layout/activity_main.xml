<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        tools:context=".MainActivity">
    <TextView
            android:id="@+id/titleTXT"
            style="@style/title_purple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IMC" android:textSize="48sp"/>
    <EditText
            android:id="@+id/pesoEDT"
            android:layout_marginTop="64dp"
            android:layout_marginHorizontal="64dp"
            android:layout_width="match_parent"
            android:inputType="numberDecimal"
            android:hint="Insira o peso aqui"
            android:textColor="@color/holo_green_dark"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_height="wrap_content"/>

    <EditText
            android:id="@+id/alturaEDT"
            style="@style/input_style"
            android:hint="Insira a sua altura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           />
    <Button
            android:id="@+id/calcularBTN"
            android:backgroundTint="@color/holoblue_ligth"
            android:text="Calcular"
            android:padding="16dp"
            android:textSize="16sp"
            android:layout_marginTop="46dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


</LinearLayout>